<?xml version="1.0" encoding="UTF-8"?>
<cities>
    {{#each cities~}}
      <city>
        <id>{{id}}</id>
        <name>{{name}}</name>
        <weather>
          {{~#main}}
            <currentTemp>{{temp}}</currentTemp>
            <lowTemp>{{temp_min}}</lowTemp>
            <hiTemp>{{temp_max}}</hiTemp>
            <humidity>{{humidity}}</humidity>
          {{/main~}}
          <windSpeed>{{wind.speed}}</windSpeed>
          {{~#with weather}}
            <summary>{{0.main}}</summary>
            <description>{{0.description}}</description>
          {{/with~}}
        </weather>
      </city>
    {{/each~}}
</cities>
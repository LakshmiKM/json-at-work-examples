{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"email": {
			"type": "string",
			"pattern": "^[\\w|-]+@[\\w|-]+\\.[A-Za-z]{2,4}$"
		},
		"firstName": {
			"type": "string"
		},
		"lastName": {
			"type": "string"
		},
		"postedSlides": {
			"type": "boolean"
		},
		"rating": {
			"type": "number",
			"anyOf": [{
				"maximum": 2.0
			}, {
				"maximum": 5.0
			}]
		}
	},
	"additionalProperties": false,
	"required": ["email", "firstName", "lastName", "postedSlides", "rating"]
}
